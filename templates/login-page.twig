    </div>

    {{ block('login') }}

    <style type="text/css">

.brand {
    text-align: center;
    position: relative;
    top: -30px;
}

.foot {
    position:absolute;
    left:130px;
    right:130px;
    top:430px;
    text-align:center;
    padding-top: 10px;
